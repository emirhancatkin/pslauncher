<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

 
  <Color x:Key="Bg0">#050816</Color>
  <Color x:Key="Bg1">#0B1733</Color>
  <Color x:Key="Card">#0D1B3A</Color>
  <Color x:Key="Card2">#0A142E</Color>
  <Color x:Key="Glow">#38A4FF</Color>
  <Color x:Key="Accent">#2B8CFF</Color>
  <Color x:Key="Accent2">#1FD0FF</Color>
  <Color x:Key="TextDim">#9FB2D8</Color>

  <SolidColorBrush x:Key="Bg0Brush" Color="{StaticResource Bg0}"/>
  <SolidColorBrush x:Key="Bg1Brush" Color="{StaticResource Bg1}"/>
  <SolidColorBrush x:Key="CardBrush" Color="{StaticResource Card}"/>
  <SolidColorBrush x:Key="Card2Brush" Color="{StaticResource Card2}"/>
  <SolidColorBrush x:Key="GlowBrush" Color="{StaticResource Glow}"/>
  <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource Accent}"/>
  <SolidColorBrush x:Key="Accent2Brush" Color="{StaticResource Accent2}"/>
  <SolidColorBrush x:Key="TextDimBrush" Color="{StaticResource TextDim}"/>


  <Style TargetType="TextBlock">
    <Setter Property="FontFamily" Value="Bahnschrift"/>
    <Setter Property="Foreground" Value="White"/>
    <Setter Property="TextOptions.TextFormattingMode" Value="Display"/>
  </Style>

<Style x:Key="H1" TargetType="TextBlock">
  <Setter Property="FontSize" Value="36"/>
  <Setter Property="FontWeight" Value="Bold"/>
</Style>

  <Style x:Key="H2" TargetType="TextBlock">
    <Setter Property="FontSize" Value="20"/>
    <Setter Property="FontWeight" Value="SemiBold"/>
  </Style>

  <Style x:Key="Dim" TargetType="TextBlock">
    <Setter Property="Foreground" Value="{StaticResource TextDimBrush}"/>
    <Setter Property="FontSize" Value="13"/>
  </Style>


<Style x:Key="PsPillButton" TargetType="Button">
  <Setter Property="Foreground" Value="White"/>
  <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
  <Setter Property="BorderBrush" Value="#5BB1FF"/>
  <Setter Property="BorderThickness" Value="1"/>
  <Setter Property="Padding" Value="18,10"/>
  <Setter Property="FontWeight" Value="SemiBold"/>
  <Setter Property="Cursor" Value="Hand"/>
  <Setter Property="Template">
    <Setter.Value>
      <ControlTemplate TargetType="Button">
        <Border x:Name="Bd"
                CornerRadius="999"
                Background="{TemplateBinding Background}"
                BorderBrush="{TemplateBinding BorderBrush}"
                BorderThickness="{TemplateBinding BorderThickness}">
          <Grid Margin="12,0">
            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
          </Grid>
        </Border>

        <ControlTemplate.Triggers>
          <Trigger Property="IsMouseOver" Value="True">
            <Setter TargetName="Bd" Property="Background" Value="#3EA5FF"/>
            <Setter TargetName="Bd" Property="BorderBrush" Value="{StaticResource Accent2Brush}"/>
            <Setter TargetName="Bd" Property="Effect">
              <Setter.Value>
                <DropShadowEffect BlurRadius="24" ShadowDepth="0" Opacity="0.65" Color="{StaticResource Glow}"/>
              </Setter.Value>
            </Setter>
          </Trigger>
          <Trigger Property="IsKeyboardFocused" Value="True">
            <Setter TargetName="Bd" Property="Background" Value="#3EA5FF"/>
            <Setter TargetName="Bd" Property="BorderBrush" Value="{StaticResource Accent2Brush}"/>
            <Setter TargetName="Bd" Property="Effect">
              <Setter.Value>
                <DropShadowEffect BlurRadius="24" ShadowDepth="0" Opacity="0.65" Color="{StaticResource Glow}"/>
              </Setter.Value>
            </Setter>
          </Trigger>

          <Trigger Property="IsPressed" Value="True">
            <Setter TargetName="Bd" Property="RenderTransform">
              <Setter.Value><ScaleTransform ScaleX="0.98" ScaleY="0.98"/></Setter.Value>
            </Setter>
            <Setter TargetName="Bd" Property="RenderTransformOrigin" Value="0.5,0.5"/>
            <Setter TargetName="Bd" Property="Background" Value="#1F6FD6"/>
          </Trigger>

          <Trigger Property="IsEnabled" Value="False">
            <Setter TargetName="Bd" Property="Opacity" Value="0.45"/>
          </Trigger>
        </ControlTemplate.Triggers>
      </ControlTemplate>
    </Setter.Value>
  </Setter>
</Style>


<Style x:Key="PsGhostButton" TargetType="Button" BasedOn="{StaticResource PsPillButton}">
  <Setter Property="Background" Value="#0B1B3A"/>
  <Setter Property="BorderBrush" Value="#2A4E86"/>
</Style>



  <Style x:Key="GameTileItemStyle" TargetType="ListBoxItem">
  <Setter Property="Focusable" Value="True"/>
  <Setter Property="Padding" Value="0"/>
  <Setter Property="Margin" Value="10,0,10,0"/>
  <Setter Property="Background" Value="Transparent"/>
  <Setter Property="BorderThickness" Value="0"/>
  <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
  <Setter Property="Template">
    <Setter.Value>
      <ControlTemplate TargetType="ListBoxItem">
        <Grid RenderTransformOrigin="0.5,0.5">
          <Grid.RenderTransform>
            <ScaleTransform x:Name="Scale" ScaleX="1" ScaleY="1"/>
          </Grid.RenderTransform>

          <Border x:Name="Glow"
                  CornerRadius="26"
                  Opacity="0"
                  BorderThickness="2"
                  BorderBrush="{StaticResource GlowBrush}">
            <Border.Effect>
              <DropShadowEffect BlurRadius="36" ShadowDepth="0" Opacity="0.85" Color="{StaticResource Glow}"/>
            </Border.Effect>
          </Border>

          <ContentPresenter/>
        </Grid>

        <ControlTemplate.Triggers>
          <Trigger Property="IsSelected" Value="True">
            <Setter TargetName="Glow" Property="Opacity" Value="1"/>
            <Trigger.EnterActions>
              <BeginStoryboard>
                <Storyboard>
                  <DoubleAnimation Storyboard.TargetName="Scale" Storyboard.TargetProperty="ScaleX" To="1.10" Duration="0:0:0.12"/>
                  <DoubleAnimation Storyboard.TargetName="Scale" Storyboard.TargetProperty="ScaleY" To="1.10" Duration="0:0:0.12"/>
                </Storyboard>
              </BeginStoryboard>
            </Trigger.EnterActions>
            <Trigger.ExitActions>
              <BeginStoryboard>
                <Storyboard>
                  <DoubleAnimation Storyboard.TargetName="Scale" Storyboard.TargetProperty="ScaleX" To="1" Duration="0:0:0.12"/>
                  <DoubleAnimation Storyboard.TargetName="Scale" Storyboard.TargetProperty="ScaleY" To="1" Duration="0:0:0.12"/>
                </Storyboard>
              </BeginStoryboard>
            </Trigger.ExitActions>
          </Trigger>
        </ControlTemplate.Triggers>
      </ControlTemplate>
    </Setter.Value>
  </Setter>
</Style>
</ResourceDictionary>
